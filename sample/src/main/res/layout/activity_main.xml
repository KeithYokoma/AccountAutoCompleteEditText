<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.yokomark.widget.account.autocomp.accountautocompleteedittext.sample.MainActivity">

    <jp.yokomark.widget.account.autocomp.AccountAutoCompleteEditText
        android:id="@+id/any"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:imeOptions="actionNext"
        android:hint="@string/label_account_type_any"
        app:accountType="any"/>
    <jp.yokomark.widget.account.autocomp.AccountAutoCompleteEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/any"
        android:layout_marginBottom="48dp"
        android:imeOptions="actionNext"
        android:hint="@string/label_account_email"
        app:accountType="email"/>
    <jp.yokomark.widget.account.autocomp.AccountAutoCompleteEditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginBottom="48dp"
        android:imeOptions="actionDone"
        android:hint="@string/label_account_phone_number"
        app:accountType="phoneNumber"/>
</RelativeLayout>
